{
  "name": "@ultralife/service",
  "version": "0.1.0",
  "description": "UltraLife Protocol MCP Server and Chain Indexer",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "serve": "tsx src/web/index.ts",
    "serve:prod": "node dist/web/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "deploy-scripts": "tsx src/scripts/deploy-reference-scripts.ts",
    "seed-testnet": "tsx src/scripts/seed-testnet.ts"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^5.5.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cbor": "^9.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lucid-cardano": "^0.10.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
