# =============================================================================
# UltraLife Protocol Service Configuration
# =============================================================================
# Copy this file to .env and fill in your values after deployment
# See docs/DEPLOYMENT.md for deployment instructions

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network: mainnet, preprod, or preview
NETWORK=preprod

# Blockfrost API key (get one at https://blockfrost.io)
BLOCKFROST_API_KEY=your_api_key_here

# =============================================================================
# IDENTITY CONTRACTS
# =============================================================================

# pNFT minting policy ID (generated after deployment)
PNFT_POLICY=

# pNFT spending validator address
PNFT_SPEND=

# Recovery contract address (for identity recovery via guardians)
RECOVERY=

# =============================================================================
# TOKEN CONTRACTS
# =============================================================================

# ULTRA token minting policy ID
TOKEN_POLICY=

# Token spending validator address
TOKEN_SPEND=

# Treasury contract address (holds reserves, manages bonding curve)
TREASURY=

# =============================================================================
# MARKETPLACE CONTRACTS
# =============================================================================

# Marketplace validator address (offerings and agreements)
MARKETPLACE=

# Work auction validator address (needs/bids)
WORK_AUCTION=

# =============================================================================
# RECORDS & REGISTRY CONTRACTS
# =============================================================================

# Records contract address (transaction history)
RECORDS=

# Registry contract address (category definitions)
REGISTRY=

# Memory contract address (long-term storage)
MEMORY=

# =============================================================================
# BIOREGION & LAND CONTRACTS
# =============================================================================

# Bioregion validator address
BIOREGION=

# Land rights validator address
LAND_RIGHTS=

# Commons validator address (shared resources)
COMMONS=

# =============================================================================
# STAKING & GOVERNANCE CONTRACTS
# =============================================================================

# Stake pool validator address
STAKE_POOL=

# Governance validator address (proposals, voting)
GOVERNANCE=

# UBI distribution validator address
UBI=

# =============================================================================
# IMPACT CONTRACTS
# =============================================================================

# Impact tracking validator address
IMPACT=

# Impact market validator address (offset trading)
IMPACT_MARKET=

# Asset impact validator address (per-asset tracking)
ASSET_IMPACT=

# Remediation validator address (cleanup/restoration)
REMEDIATION=

# Preservation validator address (protection)
PRESERVATION=

# =============================================================================
# COLLECTIVE & CARE CONTRACTS
# =============================================================================

# Collective validator address (organizations)
COLLECTIVE=

# Care contract address (care credits, caregiving)
CARE=

# =============================================================================
# INFRASTRUCTURE CONTRACTS
# =============================================================================

# Energy tracking validator address
ENERGY=

# Grants validator address (funding distribution)
GRANTS=

# Genesis validator address (protocol bootstrap)
GENESIS=

# =============================================================================
# HYDRA L2 CONTRACTS
# =============================================================================

# Spending bucket validator address (personal finance)
SPENDING_BUCKET=

# UltraLife Hydra validator address
ULTRALIFE_VALIDATOR=

# Fee pool validator address (L1 fee subsidies)
FEE_POOL=

# =============================================================================
# OPTIONAL: DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployer wallet mnemonic (24 words) - KEEP SECRET
# Only needed when running deployment scripts
# DEPLOYER_SEED=word1 word2 word3 ...

# Reference script holder address (where scripts are stored)
# REF_SCRIPT_ADDRESS=addr_test1...

# =============================================================================
# OPTIONAL: ORACLE CONFIGURATION
# =============================================================================

# Price oracle endpoint
# PRICE_ORACLE_URL=

# Environmental data oracle endpoint
# ENV_ORACLE_URL=

# Population data oracle endpoint
# POP_ORACLE_URL=

# =============================================================================
# OPTIONAL: HYDRA HEAD CONFIGURATION
# =============================================================================

# Hydra node WebSocket URL (if running Hydra head)
# HYDRA_WS_URL=ws://localhost:4001

# Hydra head ID (if participating in existing head)
# HYDRA_HEAD_ID=
