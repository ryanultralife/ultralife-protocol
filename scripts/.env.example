# =============================================================================
# UltraLife Protocol â€” Deployment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# NETWORK CONFIGURATION
# -----------------------------------------------------------------------------

# Cardano network: preview | preprod | mainnet
NETWORK=preview

# Blockfrost API key (get from https://blockfrost.io)
BLOCKFROST_API_KEY=your_blockfrost_api_key_here

# Optional: Koios API (alternative to Blockfrost)
# KOIOS_API_KEY=your_koios_api_key_here

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION
# -----------------------------------------------------------------------------

# Wallet seed phrase (24 words) - KEEP SECRET!
# For testnet only - never commit real seeds
WALLET_SEED="your 24 word seed phrase here for testnet only do not use mainnet funds"

# Or use private key directly (hex encoded)
# WALLET_PRIVATE_KEY=your_private_key_hex_here

# Wallet derivation path (default for Eternl/Nami)
WALLET_DERIVATION_PATH=m/1852'/1815'/0'/0/0

# -----------------------------------------------------------------------------
# GENESIS CONFIGURATION (First-time deployment only)
# -----------------------------------------------------------------------------

# Genesis UTXO (must be spent to mint genesis tokens)
# This ensures one-time mint of the total supply
# Format: tx_hash#output_index
GENESIS_UTXO=your_genesis_utxo_here

# Founding oracle key hashes (comma-separated)
# These keys can attest DNA during genesis period
FOUNDING_ORACLES=pkh1,pkh2,pkh3

# Founding steward key hashes (comma-separated)
# These keys can bootstrap the first stewards
FOUNDING_STEWARDS=pkh1,pkh2,pkh3

# Genesis end slot (when genesis period ends)
# Preview testnet: ~2 weeks from deployment
GENESIS_END_SLOT=0

# -----------------------------------------------------------------------------
# CONTRACT ADDRESSES (Populated after first deployment)
# -----------------------------------------------------------------------------

# Token policy ID (minted at genesis)
TOKEN_POLICY_ID=

# pNFT policy ID
PNFT_POLICY_ID=

# Contract script hashes (populated by deploy script)
GENESIS_SCRIPT_HASH=
PNFT_SCRIPT_HASH=
TOKEN_SCRIPT_HASH=
UBI_SCRIPT_HASH=
TREASURY_SCRIPT_HASH=
GRANTS_SCRIPT_HASH=
BIOREGION_SCRIPT_HASH=
GOVERNANCE_SCRIPT_HASH=
RECORDS_SCRIPT_HASH=
IMPACT_SCRIPT_HASH=
REMEDIATION_SCRIPT_HASH=
REGISTRY_SCRIPT_HASH=

# Reference script UTxO locations (populated after deployment)
# Format: tx_hash#output_index
REF_GENESIS=
REF_PNFT=
REF_TOKEN=
REF_UBI=
REF_TREASURY=
REF_GRANTS=

# -----------------------------------------------------------------------------
# ECONOMIC PARAMETERS
# -----------------------------------------------------------------------------

# Total token supply (default: 400 billion with 6 decimals)
TOTAL_SUPPLY=400000000000000000

# UBI base amount per cycle (default: 100 tokens)
BASE_UBI=100000000

# Bootstrap grant for new users (default: 50 tokens)
BOOTSTRAP_GRANT=50000000

# Cycle length in slots (default: 37 days = 3,196,800 slots)
CYCLE_SLOTS=3196800

# -----------------------------------------------------------------------------
# DEPLOYMENT OPTIONS
# -----------------------------------------------------------------------------

# Dry run mode (build but don't submit transactions)
DRY_RUN=false

# Verbose logging
VERBOSE=true

# Save deployment artifacts to this directory
ARTIFACTS_DIR=./deployments

# -----------------------------------------------------------------------------
# TESTNET FAUCET (for development)
# -----------------------------------------------------------------------------

# Preview testnet faucet address for requesting test ADA
# https://docs.cardano.org/cardano-testnets/tools/faucet/
